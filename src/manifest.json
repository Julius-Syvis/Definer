{
  "manifest_version": 2,
  "name": "Definer",
  "version": "0.0",
  "description": "Definer allows defining selected text via the context menu.",
  "browser_action": {
    "default_title": "Definer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/context.js",
      "js/define.js"
    ],
    "persistent": false
  },
  "icons": {
    "128": "images/128.png",
    "48": "images/48.png",
    "16": "images/16.png"
  }
}